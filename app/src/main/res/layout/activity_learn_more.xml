<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.arpit.sos.LearnMore">

    <VideoView
        android:id="@+id/cpr"
        android:layout_width="match_parent"
        android:layout_height="219dp" />

    <TextView
        android:id="@+id/ambulance_no"
        android:layout_width="165dp"
        android:layout_height="45dp"
        android:text="102"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/fire_no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ambulance"
        app:layout_constraintTop_toBottomOf="@+id/police_no" />

    <TextView
        android:id="@+id/fire_no"
        android:layout_width="165dp"
        android:layout_height="45dp"
        android:text="101"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/women_no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/fire"
        app:layout_constraintTop_toBottomOf="@+id/ambulance_no" />

    <TextView
        android:id="@+id/police_no"
        android:layout_width="165dp"
        android:layout_height="45dp"
        android:text="100"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ambulance_no"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/police"
        app:layout_constraintTop_toBottomOf="@+id/cpr" />

    <TextView
        android:id="@+id/women_no"
        android:layout_width="165dp"
        android:layout_height="45dp"
        android:text="181"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/women"
        app:layout_constraintTop_toBottomOf="@+id/fire_no" />

    <TextView
        android:id="@+id/ambulance"
        android:layout_width="165dp"
        android:layout_height="45dp"
        android:text="Ambulance"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/fire"
        app:layout_constraintEnd_toStartOf="@+id/ambulance_no"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/police" />

    <TextView
        android:id="@+id/fire"
        android:layout_width="165dp"
        android:layout_height="45dp"
        android:text="Fire"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/women"
        app:layout_constraintEnd_toStartOf="@+id/fire_no"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ambulance" />

    <TextView
        android:id="@+id/police"
        android:layout_width="165dp"
        android:layout_height="45dp"
        android:text="Police"
        android:textAlignment="center"
        android:textSize="24sp"
        app:layout_constraintBottom_toTopOf="@+id/ambulance"
        app:layout_constraintEnd_toStartOf="@+id/police_no"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cpr" />

    <TextView
        android:id="@+id/women"
        android:layout_width="192dp"
        android:layout_height="45dp"
        android:text="Women's Helpline"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/women_no"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fire" />

</android.support.constraint.ConstraintLayout>
